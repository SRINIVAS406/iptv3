                      <option value="Other">Other</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="caste">Caste </label>
                    <select class="form-control" id="caste" name="caste" >
                        <option value="">--None--</option>
                      <option value="General">General</option>
