                  <button type="submit" id="submit-btn" class="btn btn-primary mb-2">Submit</button>
                </form>
              </div>
    
          </div>
    </div>
    
</div>
<script>
  var request = new XMLHttpRequest();
request.open('GET', '/getTreeChildNode?title=Booth+Adhyaksh', false);  // `false` makes the request synchronous
request.send(null);
var elctioninfo=[];
if (request.status === 200) {
elctioninfo = JSON.parse(request.response);  
var parent = document.getElementById('parent');
 parent.innerHTML = `<option value="">--None--</option>`;
 for (var i = 0; i < elctioninfo.length; i++) {
   parent.innerHTML += `<option value="${elctioninfo[i].id}">${elctioninfo[i].id}</option>`;
 }
}
</script>


